block content
	if locals.oportunidades
		.bg-pb
			.container
				//
					p Ordenar por: 
						a(href='#') Mais recentes
						|&nbsp;/&nbsp;
						a(href='#') Mais antigas
						| &nbsp;/&nbsp;
						a(href='#') A-Z
						|&nbsp; /&nbsp;
						a(href='#') Z-A
				if oportunidades.length
					each oportunidade in oportunidades
						.row
							.col-md-2.col-sm-2.col-xs-2.text-center
								if oportunidade.image
									img.img-responsive.fit(oportunidade.image.fit(160,160))
								else
									img.img-responsive(src='/images/icon_500x500.svg')
							.col-md-10.col-sm-10.col-xs-10
								h3.no-margin: = oportunidade.nome
								p 
									if oportunidade.empresa
										span.orange
											| #{oportunidade.empresa.nomeFantasia}
									else
										span.orange
											| Empresa
									| &nbsp;| Publicado em:
									if oportunidade.createdAt
											span.orange 
												| #{oportunidade._.createdAt.format('DD')}/#{oportunidade._.createdAt.format('MM')}/#{oportunidade._.createdAt.format('YYYY')}
									else
											span.orange 
												| sem data
								if oportunidade.breveDescricao
									p!= oportunidade.breveDescricao
								else
									p Sem descrição!
								p.btn.small.orange: a(href='oportunidades?=' + oportunidade.id) Leia mais
				else
					.row
						.col-md-12
							h3 Nenhuma oportunidade!
	else if locals.umaOportunidade
		.bg-pb
			.container
				.row
					.col-md-2.col-sm-2.col-xs-2.text-center
						if umaOportunidade.image
							img.img-responsive(oportunidade.image.fit(160,160))
						else
							img.img-responsive(src='/images/icon_500x500.svg', width='80', height='80')
					.col-md-7.col-sm-10.col-xs-10
						.col-md-12
							h3.no-margin
								|Título: 
								span.orange 
									| #{umaOportunidade[0].nome}
							p
								
								if umaOportunidade[0].tipoOferta
									| &nbsp;| Tipo de oferta:
									span.orange 
										| #{umaOportunidade[0].tipoOferta}
								else
								
							if umaOportunidade[0].linkProposta
								p
									span <strong>
										| Link para proposta: </strong>
										a(href=umaOportunidade[0].linkProposta)= umaOportunidade[0].linkProposta
								
							if umaOportunidade[0].quantidade
