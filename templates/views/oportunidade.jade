								<br/>
								p(style="word-wrap: break-word;")
									|#{umaOportunidade[0].descricaoDetalhada}
					
					.col-md-3.col-sm-12.col-xs-12
						.col-md-12
							h3.rule-bottom.text-center Informações do Anunciante
							
							if umaOportunidade[0].empresa.nomeFantasia
								p 
									<strong>Empresa: </strong> #{umaOportunidade[0].empresa.nomeFantasia}
							
							if umaOportunidade[0].tipoOportunidade == 'VENDA'
								if umaOportunidade[0].empresa.contatoComercial
									p 
										<strong>Contato Comercial: </strong> #{umaOportunidade[0].empresa.contatoComercial}
										
								if umaOportunidade[0].empresa.telefone
									p 
										<strong>Telefone: </strong> #{umaOportunidade[0].empresa.telefone}
							
							if umaOportunidade[0].empresa.webSite
								p 
									<strong>Site da Empresa: </strong> #{umaOportunidade[0].empresa.webSite}
							
							if umaOportunidade[0].empresa.twitter
								p 
									<strong>Twitter: </strong> #{umaOportunidade[0].empresa.twitter}
							
							p
								a(href="/empresa?#{umaOportunidade[0].empresa.controlData}") Veja o perfil do Anunciante

	else
